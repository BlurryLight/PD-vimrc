function! VimCMakeBuildSucceededCallback()
    CMakeClose
    " disbale async bell
    let g:asyncrun_bell = 0
    AsyncRun -silent -strip notify "CMake Build Succeeded"
    " restore the bell
    let g:asyncrun_bell = 1
endfunction

